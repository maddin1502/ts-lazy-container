{
  "name": "[package-name]",
  "version": "1.0.0",
  "description": "Template for node packages",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc -p ./tsconfig.prod.json",
    "build-dev": "tsc -p ./tsconfig.dev.json",
    "lint": "eslint src",
    "lint-fix": "npm run lint -- --fix",
    "test": "vitest run --coverage",
    "test-ui": "vitest --ui",
    "test-watch": "vitest watch",
    "reset-modules": "npx --quiet -y rimraf node_modules/ package-lock.json",
    "reset-creation": "npx --quiet -y rimraf dist/ tests/reports/",
    "reset": "npm run reset-creation && npm run reset-modules",
    "validate": "npm run reset && npm i && npm run build && npm test",
    "create": "npm run reset-creation && npm run build && npm test",
    "produce": "npm run validate && npm i --only=prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maddin1502/[package-name].git"
  },
  "keywords": [
    "typescript",
    "template"
  ],
  "author": "maddin1502",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maddin1502/[package-name]/issues"
  },
  "homepage": "https://github.com/maddin1502/[package-name]#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "@vitest/coverage-v8": "^0.32.2",
    "@vitest/ui": "^0.32.2",
    "eslint": "^8.21.0",
    "typescript": "^5.1.3",
    "vitest": "^0.32.0"
  }
}
